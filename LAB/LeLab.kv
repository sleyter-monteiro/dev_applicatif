<ImagesExemple@GridLayout>
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    Image:
        source: "images/cake.jpg"
        keep_ratio: False
    Image:
        source: "images/donut.gif"
        anim_delay: 0/60     

<WidgetsExemple>
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"

    Button:
        text: "Compter"
        on_press: root.on_button_click()
        disabled: not root.compteur_actif

    Label:
        text: root.mon_texte
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1, 0, 0, 1

    Switch:
        id: mon_switch
        on_active: root.on_switch_active(self)
        active: True
        size_hint: None, 1
        width: "100dp"

    Slider:
        id: mon_slider
        min: 0
        max: 100
        value: 50
        disabled: not mon_switch.active
        # on_value: root.on_slider_value(self)

    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(mon_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "80dp"
            color: 1, 0, 0, 1
        ProgressBar:
            value: mon_slider.value
            max: mon_slider.max
            min: mon_slider.min
            size_hint: 1, .2   

    TextInput:
        id: mon_text_input
        size_hint: None, 1
        width: "100dp"
        text: "Hello World"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: root.texte_input_str
        font_name: "fonts/Lcd.ttf"
        color: 1, 0, 0, 1    
    



<PageLayoutExemple@PageLayout>
    MainWidget:
    BoxLayoutExemple:
    AnchorLayoutExemple:
    GridLayoutExemple:

<ScrollViewExemple@ScrollView>
    StackLayoutExemple:
        size_hint: 1, None
        height: self.minimum_height

